   <style>
   .filters {
  display: flex;
  gap: 1.5rem;
  overflow-x: auto;
  padding: 1rem 2rem;
  align-items: center;
  border-bottom: 1px solid #ddd;
  scroll-snap-type: x mandatory;
}

.filter {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  scroll-snap-align: start;
  cursor: pointer;
  transition: transform 0.3s ease;
  min-width: 80px;
  opacity: 0.7;
}

.filter:hover {
  transform: scale(1.1);
  opacity: 1;
}

.filter i {
  font-size: 24px;
  margin-bottom: 0.3rem;
}

.filter p {
  font-size: 14px;
  margin: 0;
  text-align: center;
}

/* Toggle Section */
.tax-toggle {
  margin-left: auto;
  white-space: nowrap;
}

.form-check-reverse {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

/* Tablet View */
@media (max-width: 768px) {
  .filters {
    padding: 1rem;
    gap: 1rem;
  }

  .filter i {
    font-size: 20px;
  }

  .filter p {
    font-size: 13px;
  }

  .tax-toggle {
    font-size: 13px;
  }
}

/* Mobile View */
@media (max-width: 480px) {
  .filters {
    gap: 1rem;
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
  }

  .filter {
    min-width: 70px;
  }

  .filter i {
    font-size: 18px;
  }

  .filter p {
    font-size: 12px;
  }

  .tax-toggle {
    display: none; /* Hide on small screens or adjust placement */
  }
}

